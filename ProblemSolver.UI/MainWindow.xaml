<Window x:Class="ProblemSolver.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProblemSolver.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>

        <Grid.ColumnDefinitions>
            
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <Label VerticalAlignment="Center" Margin="5">Enter your course id</Label>
            <TextBox x:Name="CourseInputBox" Width="55" Height="20" VerticalAlignment="Center" Margin="5"
                     Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">

            <Label VerticalAlignment="Center" Margin="5">Choose language</Label>
            <ComboBox Width="75" Height="30" Margin="5" VerticalContentAlignment="Center"
                      ItemsSource="{Binding Languages}"
                      SelectedItem="{Binding SelectedLanguage}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
        </StackPanel>

            <ScrollViewer Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4">
            <StackPanel>
                <TextBlock Text="Content goes here..." Margin="10"/>
                <TextBlock Text="More content..." Margin="10"/>
                <TextBlock Text="Even more content..." Margin="10"/>
                <TextBlock Text="Content goes here..." Margin="10"/>
                <TextBlock Text="More content..." Margin="10"/>
                <TextBlock Text="Even more content..." Margin="10"/>
                <TextBlock Text="Content goes here..." Margin="10"/>
                <TextBlock Text="More content..." Margin="10"/>
                <TextBlock Text="Even more content..." Margin="10"/>
                <TextBlock Text="Content goes here..." Margin="10"/>
                <TextBlock Text="More content..." Margin="10"/>
                <TextBlock Text="Even more content..." Margin="10"/>
                <TextBlock Text="Content goes here..." Margin="10"/>
                <TextBlock Text="More content..." Margin="10"/>
                <TextBlock Text="Even more content..." Margin="10"/>
                <TextBlock Text="Content goes here..." Margin="10"/>
                <TextBlock Text="More content..." Margin="10"/>
                <TextBlock Text="Even more content..." Margin="10"/>
            </StackPanel>
        </ScrollViewer>
        
    </Grid>

</Window>
