<Window x:Class="ProblemSolver.UI.Views.EditAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProblemSolver.UI.Views"
        mc:Ignorable="d"
        Title="Check Options" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Account name" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Option.AccountName}" Height="40" Margin="0,0,0,10"/>
            <Label Content="AI Bot:" Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding AiBots}" SelectedItem="{Binding Option.AiBot}" Height="40" Margin="0,0,0,10"/>
            <Label Content="Language:" Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding Languages}" SelectedItem="{Binding Option.Language}" Height="40" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
                <Button Content="Save" Command="{Binding SaveCommand}" Margin="5" Width="100"/>
                <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="5" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
