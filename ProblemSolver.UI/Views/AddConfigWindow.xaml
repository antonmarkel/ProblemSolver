<Window x:Class="ProblemSolver.UI.Views.AddConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProblemSolver.UI.Views"
        mc:Ignorable="d"
        Title="ConfigWindow" Height="400" Width="800"
        MinHeight="400"
        MinWidth="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Neural Network Model:"/>
            <ComboBox ItemsSource="{Binding NeuralNetworkModels}" SelectedItem="{Binding Config.NeuralNetworkModel}"/>
            <Label Content="Language:"/>
            <ComboBox ItemsSource="{Binding Languages}" SelectedItem="{Binding Config.Language}"/>
            <Label Content="Task ID:"/>
            <TextBox Text="{Binding Config.TaskId}"/>
          
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
                <Button Content="Save" Command="{Binding SaveCommand}" Margin="5"/>
                <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
